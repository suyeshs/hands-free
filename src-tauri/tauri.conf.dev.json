{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HandsFree Restaurant DEV",
  "version": "0.2.0",
  "identifier": "com.stonepot-tech.handsfree-pos-dev",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "HandsFree Restaurant POS [DEV]",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://auth.handsfree.tech https://*.handsfree.tech https://*.suyesh.workers.dev https://*.pages.dev wss://*.suyesh.workers.dev; frame-src 'none'; object-src 'none'; base-uri 'self'"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "configs/*",
      "scripts/*"
    ],
    "shortDescription": "AI-First Restaurant POS System (Development)",
    "longDescription": "HandsFree Restaurant POS - Development build with separate database.",
    "category": "Business",
    "publisher": "StonePot Tech"
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:pos.db"]
    }
  }
}
