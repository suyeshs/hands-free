{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "https://handsfree-restaurant-client.suyesh.workers.dev/*"
        },
        {
          "url": "https://handsfree-restaurant.suyesh.workers.dev/*"
        },
        {
          "url": "https://handsfree-orders.suyesh.workers.dev/*"
        },
        {
          "url": "https://stonepot-restaurant-*.run.app/*"
        },
        {
          "url": "https://admin.handsfree.tech/*"
        },
        {
          "url": "https://*.handsfree.tech/*"
        }
      ]
    },
    {
      "identifier": "http:allow-fetch-read-body",
      "allow": [
        {
          "url": "https://handsfree-restaurant-client.suyesh.workers.dev/*"
        },
        {
          "url": "https://handsfree-restaurant.suyesh.workers.dev/*"
        },
        {
          "url": "https://handsfree-orders.suyesh.workers.dev/*"
        },
        {
          "url": "https://stonepot-restaurant-*.run.app/*"
        },
        {
          "url": "https://admin.handsfree.tech/*"
        },
        {
          "url": "https://*.handsfree.tech/*"
        }
      ]
    }
  ]
}
