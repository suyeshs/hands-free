# Tauri POS Environment Configuration
# Backend API for menu sync and operations

# HandsFree Restaurant Client Worker API
VITE_BACKEND_API_URL=https://handsfree-restaurant-client.suyesh.workers.dev/api

# Orders Worker API (for order polling fallback)
VITE_ORDERS_API_URL=https://handsfree-orders.suyesh.workers.dev

# Orders Worker WebSocket URL (for real-time updates)
VITE_ORDERS_WS_URL=wss://handsfree-orders.suyesh.workers.dev

# Default tenant (will be overridden by device registration)
VITE_DEFAULT_TENANT_ID=khao-piyo-7766

# Disable skip auth to use real phone login
VITE_SKIP_AUTH=false

# Cloudflare Zero Trust Service Token (for authenticated API access)
# Create at: Cloudflare Dashboard → Zero Trust → Access → Service Auth
VITE_CF_ACCESS_CLIENT_ID=
VITE_CF_ACCESS_CLIENT_SECRET=
