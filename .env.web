# Web Environment Variables
# Used when building/running the web version (not Tauri)

# Platform identifier
VITE_PLATFORM=web

# Backend API URL - HandsFree Restaurant Client Worker
VITE_BACKEND_API_URL=https://handsfree-restaurant-client.suyesh.workers.dev/api

# Orders Worker API
VITE_ORDERS_API_URL=https://handsfree-orders.suyesh.workers.dev

# Default tenant ID (will be overridden by device activation)
VITE_DEFAULT_TENANT_ID=coorg-food-company-6163

# Feature flags
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_PRINTING=true
VITE_ENABLE_VOICE_ORDERING=true

# WebSocket URL (for real-time order updates)
VITE_WEBSOCKET_URL=wss://handsfree-orders.suyesh.workers.dev

# App metadata
VITE_APP_NAME=Restaurant POS
VITE_APP_VERSION=1.0.0
